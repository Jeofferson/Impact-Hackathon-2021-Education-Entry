<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.determinecareer.CareerTestIntroduction">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/background_design3"
            android:backgroundTint="@color/background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="CARRER TEST"
                android:textColor="@color/white"
                android:textSize="40dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="We know that choosing a major can be difficult, with so many options and your many varied interests. If youâ€™re not sure what you want to study yet, have no fear. Take our short test and find out which majors may be a good fit for you and your future."
            android:textSize="20sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:text="Next"
        android:backgroundTint="@color/button_color1"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>