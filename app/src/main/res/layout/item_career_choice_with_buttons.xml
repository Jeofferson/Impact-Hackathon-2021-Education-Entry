<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/transparent"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="17sp"
                tools:text="1." />

            <TextView
                android:id="@+id/lbl_career_choice_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="17sp"
                tools:text="Sample Career Choice" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageView
            android:id="@+id/img_career_choice_image"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_background" />

        <Button
            android:id="@+id/btn_take_assessment_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take Assesment Test" />

        <Button
            android:id="@+id/btn_watch_a_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watch a Video" />

    </LinearLayout>

</androidx.cardview.widget.CardView>